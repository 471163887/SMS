<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fury.sqlite.Activity.ShowStudent">

    <TextView
        android:id="@+id/welcome_text_view"
        android:text="Hello this is show student page !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/show_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text_view" >

        <TextView
            android:id="@+id/show_snum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10sp"
            android:text="学号"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/show_sclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_toRightOf="@+id/show_snum"
            android:text="班级"
            android:layout_marginTop="10sp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/show_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:text="姓名"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/show_sclass"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/show_ssex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:text="性别"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/show_sname"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/show_sage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:text="年龄"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/show_ssex"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/show_sphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:text="电话"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/show_sage"
            android:textSize="10sp" />
        <ListView
            android:id="@+id/show_student_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:layout_below="@+id/show_snum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ListView>

    </RelativeLayout>

</RelativeLayout>
