<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snum"
        android:text="学号："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sname"
        android:text="姓名："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sclass"
        android:text="班级："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ssex"
        android:text="性别："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sage"
        android:text="年龄："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sphone"
        android:text="电话："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="180dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_snum"
        android:hint="student number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/ssex"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_sname"
        android:hint="student name"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/ssex"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_sclass"
        android:hint="student class"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/ssex"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_ssex"
        android:hint="性别"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/ssex"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_sage"
        android:hint="age"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="140dp"
        android:layout_toRightOf="@+id/ssex"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_sphone"
        android:hint="phone number."
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="180dp"
        android:layout_toRightOf="@+id/ssex"/>
    <!--android:layout_marginTop="50dp" android:gravity="center"  hint 放在中间-->


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_confirm"
        android:text="确认加入该名同志！"
        android:layout_toRightOf="@+id/ssex"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp" />

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:id="@+id/hello_blank_fragment" />

</RelativeLayout>
