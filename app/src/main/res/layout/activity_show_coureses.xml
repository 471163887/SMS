<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fury.sqlite.Activity.ShowScores">


    <RelativeLayout
        android:id="@+id/show_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/show_cnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10sp"
            android:text="课程号"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/show_cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:text="课程名"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/show_cnum"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/show_Ccredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:text="学分"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/show_cname"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/show_courses_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:layout_below="@+id/show_Ccredit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ListView>

    </RelativeLayout>

</RelativeLayout>
