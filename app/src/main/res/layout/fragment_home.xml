<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/home_head"
        layout="@layout/common_above_title" />

    <com.example.fury.sqlite.util.RefreshableListView
        android:id="@+id/mineList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dip"
        android:drawSelectorOnTop="false"
        android:fadingEdgeLength="0.0sp"
        android:layout_below="@id/home_head"
        android:scrollbars="none" >
    </com.example.fury.sqlite.util.RefreshableListView>



    <TextView
        android:id="@+id/student_inf"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:background="@drawable/selector_green_corners_button"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="数据查询"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/retrunwelcome"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/selector_grey_dark_corners_button"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="返回登陆界面"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/student_course"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:src="@drawable/ic_action_compose"
        android:id="@+id/imageView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/home_head"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:src="@drawable/ic_staticstic"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toLeftOf="@+id/student_inf"
        android:layout_toStartOf="@+id/student_inf"
        android:layout_below="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:src="@drawable/pikaqiu"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/student_inf"
        android:layout_toRightOf="@+id/student_inf" />
    <TextView
        android:id="@+id/student_course"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/selector_renren_blue_button"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="数据统计"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />
    <TextView
        android:id="@+id/student_score"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:background="@drawable/selector_red_corners_start_button"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="数据维护"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/retrunwelcome"
        android:layout_toEndOf="@+id/retrunwelcome" />
    <!--
    <LinearLayout>



    </LinearLayout>>-->


</RelativeLayout>
