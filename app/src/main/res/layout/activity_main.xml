<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />


    <Button
        android:id="@+id/To_DataMaintenance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/To_DataMaintenance"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp" />
    <Button
        android:id="@+id/To_DataSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/To_DataSearch"
        android:layout_below="@+id/To_DataMaintenance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="92dp" />
    <Button
        android:id="@+id/To_DataStatistics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/To_DataStatistics"
        android:layout_below="@+id/To_DataSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp" />

</RelativeLayout>
