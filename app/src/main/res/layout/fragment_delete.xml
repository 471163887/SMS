<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello This is delete fragment!"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snum"
        android:text="请输入将删除学生的学号："
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_snum"
        android:hint="student number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnum"
        android:text="请输入将删除的课程号："
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_cnum"
        android:hint="course number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnum2"
        android:text="请输入将删除的课程号："
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/et_snum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_cnum2"
        android:hint="course number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/cnum2"
        android:layout_alignLeft="@+id/et_snum"
        android:layout_alignStart="@+id/et_snum"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:id="@+id/delete"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="240dp"
        android:textSize="15dp"
        android:visibility="gone"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:id="@+id/delete2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="240dp"
        android:textSize="15dp"
        android:visibility="gone"
        />

</RelativeLayout>
