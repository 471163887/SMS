<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <TextView android:layout_width="match_parent" android:layout_height="378dp"
        android:text="@string/hello_score_fragment"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_confirm"
        android:text="确认写入该名同学的成绩"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/snum"
        android:layout_marginTop="250dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snum"
        android:text="学号："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnum"
        android:text="课程号："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="成绩："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_snum"
        android:hint="student number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/snum"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_cnum"
        android:hint="course number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/snum"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_score"
        android:hint="Score"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/snum"/>

</RelativeLayout>
