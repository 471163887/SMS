<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fury.sqlite.Activity.ShowLoserWithCla">

    <TextView
        android:id="@+id/welcome_text_view"
        android:text="摔倒了不可怕 放弃才是失败！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/show_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcome_text_view" >

        <TextView
            android:id="@+id/show_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="课程号"
            android:layout_weight="1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/show_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:text="课程名"
            android:layout_weight="1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/show_cnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230sp"
            android:text="补考名单"
            android:layout_weight="1"
            android:textSize="20sp" />
        <ListView
            android:id="@+id/stupid_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_cnam"
            android:layout_alignParentLeft="true"
            android:choiceMode="singleChoice" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>
