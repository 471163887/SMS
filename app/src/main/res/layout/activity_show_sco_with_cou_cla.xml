<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fury.sqlite.Activity.ShowScoWithCouCla">

    <TextView
        android:id="@+id/welcome_text_view"
        android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/show_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcome_text_view" >

        <TextView
            android:id="@+id/show_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="班级"
            android:layout_weight="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/show_cnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140sp"
            android:text="课程号"
            android:layout_weight="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/show_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280sp"
            android:text="成绩"
            android:layout_weight="1"
            android:textSize="20sp" />
        <ListView
            android:id="@+id/cla_cou_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_score"
            android:layout_alignParentLeft="true"
            android:choiceMode="singleChoice" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>
