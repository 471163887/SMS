<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello This is modify fragment!"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snum"
        android:text="请输入将修改学生的学号："
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_snum"
        android:hint="student number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnum"
        android:text="请输入将修改的课程号："
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_cnum"
        android:hint="course number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnum2"
        android:text="请输入将修改的课程号："
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/et_snum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_cnum2"
        android:hint="course number"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/cnum2"
        android:layout_alignLeft="@+id/et_snum"
        android:layout_alignStart="@+id/et_snum"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:id="@+id/query"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="240dp"
        android:textSize="15dp"
        android:visibility="gone"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:id="@+id/bnt_modify"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="240dp"
        android:textSize="15dp"
        android:visibility="gone"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_sclass"
        android:hint="请输入修改后学生的班级"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_sname"
        android:hint="请输入修改后学生的姓名"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_ssex"
        android:hint="请输入修改后学生的性别"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_sage"
        android:hint="请输入修改后学生的年龄"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_sphone"
        android:hint="请输入修改后学生的电话"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_cname"
        android:hint="请输入修改后课程的名称"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_ccredit"
        android:hint="请输入修改后课程的学分"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_cnum"
        android:hint="请输入将修改成绩的课程号"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_modify_score"
        android:hint="请输入修改后的成绩"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"/>

</RelativeLayout>
